{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "voice-model-lab-backend",
                    "region": "us-central1"
                }
            },
            {
                "source": "/ws/**",
                "run": {
                    "serviceId": "voice-model-lab-backend",
                    "region": "us-central1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}